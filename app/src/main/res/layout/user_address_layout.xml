<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/id_address_list"
        style="@style/CustomListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <ViewStub
        android:id="@+id/id_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout="@layout/list_empty_loading_layout" />

    <ViewStub
        android:id="@+id/id_empty_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout="@layout/list_empty_loading_fail" />

    <ViewStub
        android:id="@+id/id_empty_no_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout="@layout/list_empty_address" />

    <ImageButton
        android:id="@+id/id_address_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/ic_add_receiveaddress"
        android:textColor="@color/white" />

</FrameLayout>