<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.usabusi.swiperefreshlayoutupdown.view.SwipeRefreshLayoutUpDown
        android:id="@+id/id_shop_store_detail_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/id_shop_store_detail_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            style="@style/CustomListView" />
    </com.usabusi.swiperefreshlayoutupdown.view.SwipeRefreshLayoutUpDown>

    <ViewStub
        android:id="@+id/id_shop_store_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout="@layout/list_empty_loading_layout" />

    <ViewStub
        android:id="@+id/id_shop_store_empty_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout="@layout/list_empty_loading_fail" />

    <ViewStub
        android:id="@+id/id_shop_store_empty_done"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout="@layout/list_empty_loaddone_empty" />

    <com.android.app.buystore.utils.expandtab.ExpandTabView
        android:id="@+id/id_shop_store_expandtab_view"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#ffffff" />

</FrameLayout>