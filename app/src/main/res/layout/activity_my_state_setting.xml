    <View
        android:id="@+id/ll_state_setting_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        android:layout_below="@+id/include"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_below="@+id/ll_state_setting_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="35dp"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_state_setting_charge"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:button="@drawable/selector_check"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#404040"
                android:text="收费"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#404040"
                android:text="(客户需要消耗Boss券查看)"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_state_setting_free"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:button="@drawable/selector_check"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#404040"
                android:text="免费"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#404040"
                android:text="(钻石以上会员可以选择此项)"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:paddingBottom="50dp"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_state_setting_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:button="@drawable/selector_check"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#404040"
                android:text="关闭"
                android:layout_marginLeft="15dp"

                />

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_state_setting_true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/c_168eef"
        android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />
    </RelativeLayout>
</RelativeLayout>
