<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/id_order_item_content_icon"
        android:layout_width="@dimen/order_item_image_width"
        android:layout_height="@dimen/order_item_image_height"
        android:scaleType="centerInside" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp" >

        <TextView
            android:id="@+id/id_order_item_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:singleLine="true"
            android:textSize="@dimen/settings_userinfo_textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_order_item_content_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_order_item_content_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/id_order_item_content_name"
            android:layout_marginRight="8dp"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_order_item_content_marketprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/id_order_item_content_price"
            android:textColor="@color/gray"
            android:visibility="gone"
            android:textSize="12sp" />

        <Button
            android:id="@+id/id_order_item_content_assess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/app_btn_enabled_shape"
            android:focusable="false"
            android:padding="8dp"
            android:text="@string/order_assess"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>